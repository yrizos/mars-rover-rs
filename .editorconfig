# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation for Rust files
[*.rs]
indent_style = space
indent_size = 4

# 2 space indentation for TOML files
[*.toml]
indent_style = space
indent_size = 2

# 2 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# 2 space indentation for YAML files
[*.yml]
indent_style = space
indent_size = 2

# 4 space indentation for Markdown files
[*.md]
indent_style = space
indent_size = 4

# 4 space indentation for shell scripts
[*.sh]
indent_style = space
indent_size = 4